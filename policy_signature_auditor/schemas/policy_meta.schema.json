{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/policy_meta_v1.json",
  "title": "Policy Meta Schema for Strict Mode",
  "description": "Minimal schema for validating policy metadata in strict mode",
  "type": "object",
  "required": [
    "policy_version",
    "policy_date",
    "ko_labels",
    "dependencies",
    "policy_signature"
  ],
  "properties": {
    "policy_version": {
      "type": "string",
      "pattern": "^[a-z_]+_v\\d+\\.\\d+\\.\\d+$",
      "description": "Policy version identifier (e.g., yongshin_v1.0.0)"
    },
    "policy_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Policy creation/update date (YYYY-MM-DD)"
    },
    "ko_labels": {
      "type": "boolean",
      "const": true,
      "description": "Must be true to indicate Korean labels are present"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of dependent policy files"
    },
    "policy_signature": {
      "type": "string",
      "description": "SHA-256 signature (UNSIGNED before signing)"
    }
  },
  "additionalProperties": true
}
