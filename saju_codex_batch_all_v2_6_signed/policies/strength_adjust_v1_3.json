{
  "version": "1.3",
  "notes": "Internal numeric scoring; UI는 정성만. 관계 보정은 구조(격국) 확정 후 적용.",
  "seasonal_state_weights": {
    "旺": 40,
    "相": 28,
    "休": 12,
    "囚": -10,
    "死": -24
  },
  "month_stem_adjust": {
    "counter": -0.15,
    "leak": -0.1,
    "assist": 0.1,
    "none": 0.0,
    "cap_abs": 0.15
  },
  "root_norm": {
    "max_points": 28,
    "scale_to": 30
  },
  "seal_norm": {
    "max_points": 20,
    "scale_to": 20
  },
  "relation_scoring": {
    "enabled": true,
    "apply_when": "structure.status == 'resolved'",
    "aggregate_policy": "relation_aggregate_policy_v1",
    "budget": {
      "max_relation_contrib_pct": 0.2
    }
  },
  "grading": {
    "index_clamp": [
      0,
      100
    ],
    "tiers": [
      {
        "name": "신강",
        "min": 70
      },
      {
        "name": "편강",
        "min": 60
      },
      {
        "name": "중화",
        "min": 45
      },
      {
        "name": "편약",
        "min": 35
      },
      {
        "name": "신약",
        "min": 0
      }
    ],
    "hysteresis": 2,
    "ui_mapping": {
      "expose_numbers": false
    }
  }
}