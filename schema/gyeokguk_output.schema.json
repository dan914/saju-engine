{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/gyeokguk_output.schema.json",
  "type": "object",
  "required": [
    "policy_version",
    "type",
    "basis",
    "confidence",
    "notes",
    "evidence_ref"
  ],
  "properties": {
    "policy_version": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "정격",
        "종격",
        "화격",
        "특수격"
      ]
    },
    "basis": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "notes": {
      "type": "string",
      "maxLength": 200
    },
    "evidence_ref": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
