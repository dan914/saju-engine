{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/luck_flow_output.schema.json",
  "type": "object",
  "required": [
    "policy_version",
    "trend",
    "score",
    "confidence",
    "drivers",
    "detractors",
    "evidence_ref"
  ],
  "properties": {
    "policy_version": {
      "type": "string"
    },
    "trend": {
      "type": "string",
      "enum": [
        "rising",
        "stable",
        "declining"
      ]
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "drivers": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 32
      },
      "maxItems": 4
    },
    "detractors": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 32
      },
      "maxItems": 4
    },
    "evidence_ref": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
