{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/yongshin_output_v1.json",
  "title": "Yongshin Selector Output v1.0",
  "type": "object",
  "required": ["policy_version","yongshin","gisin","confidence","rationale","scores","rules_fired"],
  "properties": {
    "policy_version": { "type": "string" },
    "yongshin": { "type": "array", "items": { "type": "string", "enum": ["목","화","토","금","수"] }, "minItems": 1 },
    "bojosin": { "type": "array", "items": { "type": "string", "enum": ["목","화","토","금","수"] } },
    "gisin":   { "type": "array", "items": { "type": "string", "enum": ["목","화","토","금","수"] }, "minItems": 1 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "rationale":  { "type": "array", "items": { "type": "string" } },
    "scores":     {
      "type": "object",
      "properties": { "목":{"type":"number"},"화":{"type":"number"},"토":{"type":"number"},"금":{"type":"number"},"수":{"type":"number"} },
      "additionalProperties": false
    },
    "rules_fired": { "type": "array", "items": { "type": "string" } },
    "explain": { "type": "string" }
  },
  "additionalProperties": false
}
